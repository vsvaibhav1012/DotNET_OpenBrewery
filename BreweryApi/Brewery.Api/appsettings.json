{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Brewery": "Debug"
    }
  },
  "AllowedHosts": "*",
  "UseDatabase": false,
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=breweries.db"
  },
  "OpenBreweryApi": {
    "BaseUrl": "https://api.openbrewerydb.org/v1/",
    "CacheExpirationMinutes": 10,
    "RequestTimeoutSeconds": 30
  },
  "Api": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "EnableDetailedErrors": true
  }
}